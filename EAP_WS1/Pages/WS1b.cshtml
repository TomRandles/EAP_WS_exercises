@page
@model EAP_WS1.Pages.WS1bModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>WS1b</title>
</head>
<body>
    <form method="post">
        <label for="number1">Number 1 </label>
        <input id="number1" type="number" name="number1" value="@Model.number1" />
        <br />
        <label for="number2">Number 2 </label>
        <input id="number2" type="number" name="number2"  value="@Model.number2"  />
        <br />
        <fieldset>
            <legend>Type of operation to perform</legend>
            <input type="radio" name="operation" value="plus" id="plus" /> <label for="plus">Plus</label>
            <input type="radio" name="operation" value="minus" id="minus" /> <label for="minus">Minus</label>
            <input type="radio" name="operation" value="multiply" id="multiply" /> <label for="multiply">Multiply</label>
            <input type="radio" name="operation" value="divide" id="divide" /> <label for="divide">Divide</label>
        </fieldset>
       
        <button type="submit">Enter</button>
    </form>
    <h2>@Model.message</h2>
</body>
</html>

