@page
@model EAP_WS1.Pages.timeModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>time</title>
</head>
<body>
    <form method="post">

        <br />
        <br />
        <fieldset>
            <legend>Choose a Day or Days</legend>
            @for (int i = 0; i < @Model.daysOfWeek.Length; i++)
            {
                <input asp-for=daysSelected[i]>
                <label asp-for=daysSelected[i]>@Model.daysOfWeek[i]</label>

            }
        </fieldset>

        <br />
        <br />
        <select asp-for=selectedMonths asp-items=@Model.monthsOfYear></select>  
        <br />

        <button type="submit">Enter</button>
    </form>
    <br />
    <br />
   
    <ol>
        @for (int i = 0; i < @Model.daysSelected.Length; i++)
        {
            if (@Model.daysSelected[i])
            {
                <li>@Model.daysOfWeek[i]:   @Model.daysSelected[i]</li>
            }
        }


    </ol>

    <ol>

        @for (int i = 0; i < @Model.selectedMonths.Length; i++)
        {
            <li>@Model.selectedMonths[i]</li>
        }
    </ol>

</body>
</html>
